{
  "name": "universal-connectivity-browser",
  "type": "module",
  "scripts": {
    "predev": "bun run build",
    "dev": "bun --bun next dev --experimental-https",
    "build": "bun --bun next build",
    "prestart": "bun run build",
    "start": "bun --bun next start",
    "format": "bun prettier --write src",
    "lint": "bun prettier . --check && bun --bun next lint",
    "tsc": "bun tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "@universal-connectivity/js-peer-lib": "file:../js-peer-lib",
    "@chainsafe/libp2p-gossipsub": "latest",
    "@chainsafe/libp2p-noise": "latest",
    "@chainsafe/libp2p-yamux": "latest",
    "@headlessui/react": "latest",
    "@helia/delegated-routing-v1-http-api-client": "latest",
    "@heroicons/react": "latest",
    "@libp2p/bootstrap": "latest",
    "@libp2p/circuit-relay-v2": "latest",
    "@libp2p/identify": "latest",
    "@libp2p/interface-pubsub": "latest",
    "@libp2p/logger": "latest",
    "@libp2p/ping": "latest",
    "@libp2p/pubsub-peer-discovery": "latest",
    "@libp2p/webrtc": "latest",
    "@libp2p/websockets": "latest",
    "@libp2p/webtransport": "latest",
    "@multiformats/multiaddr": "latest",
    "clsx": "latest",
    "debug": "latest",
    "it-length-prefixed": "latest",
    "it-map": "latest",
    "it-pipe": "latest",
    "it-protobuf-stream": "latest",
    "libp2p": "latest",
    "next": "latest",
    "protons-runtime": "latest",
    "react": "latest",
    "react-18-blockies": "latest",
    "react-dom": "latest",
    "uint8arrays": "latest",
    "usehooks-ts": "latest",
    "uuid": "latest"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@types/uuid": "latest",
    "autoprefixer": "latest",
    "eslint": "latest",
    "eslint-config-next": "latest",
    "postcss": "latest",
    "prettier": "latest",
    "protons": "latest",
    "tailwindcss": "latest",
    "typescript": "latest"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 2,
    "bracketSpacing": true
  }
}
