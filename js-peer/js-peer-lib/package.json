{
  "name": "@universal-connectivity/js-peer-lib",
  "type": "module",
  "version": "0.1.0",
  "main": "./dist/lib/index.js",
  "module": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js",
      "require": "./dist/lib/index.js",
      "default": "./dist/lib/index.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js",
      "require": "./dist/lib/*.js",
      "default": "./dist/lib/*.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "protons src/lib/protobuf/*.proto",
    "build": "npm run prebuild && npm run build-types && npm run build-js",
    "build-types": "tsc --emitDeclarationOnly --declaration --declarationMap --outDir dist/lib",
    "build-js": "bun build src/lib/index.ts --outdir dist/lib --format esm --target browser --external @libp2p/interface --external @multiformats/multiaddr --external debug",
    "format": "prettier --write src",
    "lint": "prettier . --check",
    "protobuf": "protons src/lib/protobuf/*.proto"
  },
  "dependencies": {
    "@chainsafe/libp2p-gossipsub": "latest",
    "@chainsafe/libp2p-noise": "latest",
    "@chainsafe/libp2p-yamux": "latest",
    "@helia/delegated-routing-v1-http-api-client": "latest",
    "@libp2p/bootstrap": "latest",
    "@libp2p/circuit-relay-v2": "latest",
    "@libp2p/identify": "latest",
    "@libp2p/interface-pubsub": "latest",
    "@libp2p/logger": "latest",
    "@libp2p/ping": "latest",
    "@libp2p/pubsub-peer-discovery": "latest",
    "@libp2p/webrtc": "latest",
    "@libp2p/websockets": "latest",
    "@libp2p/webtransport": "latest",
    "@multiformats/multiaddr": "latest",
    "debug": "latest",
    "it-length-prefixed": "latest",
    "it-map": "latest",
    "it-pipe": "latest",
    "it-protobuf-stream": "latest",
    "libp2p": "latest",
    "protons-runtime": "latest",
    "uint8arrays": "latest"
  },
  "devDependencies": {
    "@types/debug": "latest",
    "@types/node": "latest",
    "bun-types": "latest",
    "prettier": "latest",
    "protons": "latest",
    "typescript": "latest"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 2,
    "bracketSpacing": true
  }
}
